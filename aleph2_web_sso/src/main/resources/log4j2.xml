<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<Appenders>
   <Console name="STDOUT" target="SYSTEM_OUT">
     <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"/>
   </Console>
 </Appenders>
 <Loggers>
   <Root level="DEBUG">
     <AppenderRef ref="STDOUT"/>
   </Root>
 </Loggers>

</configuration>